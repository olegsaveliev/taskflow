# ================================
# TaskFlow Backend - Environment Variables
# ================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# IMPORTANT: Never commit your .env file to version control!
# ================================

# ----- Server Configuration -----
PORT=3001
NODE_ENV=development

# ----- Database Configuration -----
# For local development with PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=taskflow
DB_USER=your_username_here
DB_PASSWORD=your_password_here

# Tip for macOS with Homebrew PostgreSQL:
# Your DB_USER is usually your Mac username (run `whoami` to check)
# DB_PASSWORD might be empty or not required for local development

# ----- Authentication -----
# Generate a secure random string for production!
# You can use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=change_this_to_a_long_random_string_in_production
JWT_EXPIRES_IN=7d

# ----- CORS Configuration (optional) -----
# CORS_ORIGIN=http://localhost:5173
